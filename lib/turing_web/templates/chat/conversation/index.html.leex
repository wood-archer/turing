<%= cond do %>
<%= @play_view == :chat -> %>
  <%= render "chat_view.html", assigns %>
<%= @play_view == :bet_amount -> %>
  <%= render "bet_amount.html", assigns %>
<%= @play_view == :won -> %>
  <%= render "won.html", assigns %>
<%= @play_view == :lost -> %>
  <%= render "lost.html", assigns %>
<%= @play_view == :tie -> %>
  <%= render "lost.html", assigns %>  
<% end %>
