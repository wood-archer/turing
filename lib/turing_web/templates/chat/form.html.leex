<%= f = form_for @changeset,
    "#",
    [
      phx_change: :validate,
      phx_submit: :send_message,
      autocomplete: :off
    ]
  %>

  <%# username  %>
  <%= label f, :username %>
  <%= text_input f, :username %>
  <%= error_tag f, :username %>

  <%# content  %>
  <%= label f, :content %>
  <%= text_input f, :content %>
  <%= error_tag f, :content %>

  <%# submit %>
  <div>
    <%= submit "Send", phx_disable_with: "Loading ..." %>
  </div>

</form>
